{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"],
      "~assets": ["assets"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "jsx": "react-native",
    "lib": ["es6", "dom", "esnext"],
    "target": "esnext",
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".eslint.config.js",
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
